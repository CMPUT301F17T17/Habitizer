<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@android:color/black"
    android:orientation="vertical"><![CDATA[
    tools:context="ssmad.habitizer.HabitTabActivity">

    ]]>
        android:layout_width="371dp"
    android:layout_height="475dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_editor_absoluteY="87dp">

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.4"
        android:fontFamily="serif"
        android:text="Profile"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingBottom="24dp"
        android:paddingEnd="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/nmText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.1"
        android:fontFamily="serif"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Name:"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/usr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0.1"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Enter name here"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:visibility="visible" />

    <TextView
        android:id="@+id/btText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.05"
        android:fontFamily="serif"
        android:text="Birthday:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/birth_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0.1"
        android:background="@android:color/white"
        android:clickable="true"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="click here to set birthday"
        android:onClick="onClick"
        android:paddingLeft="5dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        android:layout_weight="0.05"
        android:fontFamily="serif"
        android:text="Gender:"
        android:textColor="@android:color/white" />

    <Spinner
        android:id="@+id/gender_spn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"

        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.05"
        android:text="Confirm"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/lay_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="Name:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/name_dis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="Birthday:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/birth_dis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="Gender:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/gender_dis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/viewHabits_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="0.1"
        android:text="view habits"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lay_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <Button
            android:id="@+id/follow_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:text="SOMETEXT"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.15"
        android:text="Edit"
        android:visibility="gone" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0.15"
        android:text="Logout"
        android:visibility="gone" />

</LinearLayout>