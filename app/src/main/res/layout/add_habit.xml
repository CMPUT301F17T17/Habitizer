<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >
    tools:context="ssmad.habitizer.AddHabitActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="383dp"
        android:layout_height="39dp"
        android:text="Add New Habit"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="3dp" />

    <EditText
        android:id="@+id/habit_input"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Habit:"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="83dp"
        tools:layout_editor_absoluteX="146dp" />

    <EditText
        android:id="@+id/reason_input"
        android:layout_width="361dp"
        android:layout_height="149dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="130dp"
        android:layout_height="31dp"
        android:text="Reason:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="39dp"
        android:text="Habit:"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/habit_input"
        tools:layout_editor_absoluteY="83dp" />

    <Button
        android:id="@+id/confirmH_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="500dp" />

</android.support.constraint.ConstraintLayout>